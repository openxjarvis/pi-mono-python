# ============================================================
# pi-mono-python — Environment Variables Template
# ============================================================
# Copy this file to .env and fill in your API keys.
# Keys are loaded automatically when running tests.
# Never commit .env to version control.
# ============================================================

# ── Google Gemini ────────────────────────────────────────────
GEMINI_API_KEY=

# Alternative name (also accepted):
# GOOGLE_API_KEY=

# ── Anthropic ────────────────────────────────────────────────
ANTHROPIC_API_KEY=

# ── OpenAI ───────────────────────────────────────────────────
OPENAI_API_KEY=

# ── Other providers (optional) ───────────────────────────────
# GROQ_API_KEY=
# XAI_API_KEY=
# MISTRAL_API_KEY=
# OPENROUTER_API_KEY=
# CEREBRAS_API_KEY=
# HF_TOKEN=

# ── Test control ─────────────────────────────────────────────
# Set to 1 to run live API tests without the --live flag:
# LIVE_TESTS=1
